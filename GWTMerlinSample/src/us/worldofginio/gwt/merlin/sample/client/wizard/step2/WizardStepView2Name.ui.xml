<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:Grid ui:field="pnlStepContent">
		<g:row>
			<g:customCell>
				<g:Label text="Name" />
			</g:customCell>
			<g:customCell>
				<g:TextBox ui:field="txtName" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label text="First Name" />
			</g:customCell>
			<g:customCell>
				<g:TextBox ui:field="txtFirstName" />
			</g:customCell>
		</g:row>
	</g:Grid>
</ui:UiBinder> 